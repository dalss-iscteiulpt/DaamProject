<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/racetxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Dog Race"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/dateTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/racetxt"
        android:layout_marginTop="16dp"
        android:text="Primary Color:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/secondarytxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dateTxt"
        android:layout_marginTop="13dp"
        android:text="Secondary Color:"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/symbolImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/secondarytxt"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="11dp"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_send" />

</RelativeLayout>